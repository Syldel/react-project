{
  "prettier.enable": false,
  "eslint.enable": true,
  "eslint.packageManager": "yarn",
  "eslint.format.enable": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.organizeImports": true,
    "source.sortMembers": true
  },
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact",
    "css",
    "json",
    "jsonc",
    "markdown",
    "scss"
  ]
}
